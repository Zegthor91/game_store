{% extends 'base.html.twig' %}

{% block title %}Mon panier - Game Store{% endblock %}

{% block body %}
<h1 class="mb-4"><i class="bi bi-cart3"></i> Mon panier</h1>

{% if cart_items is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Votre panier est vide.
    </div>
    <a href="{{ path('app_shop') }}" class="btn btn-primary">
        <i class="bi bi-shop"></i> Continuer mes achats
    </a>
{% else %}
    <div class="row">
        <div class="col-md-8">
            {% for item in cart_items %}
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                {% if item.game.imageUrl %}
                                    <img src="{{ item.game.imageUrl }}" class="img-fluid rounded" alt="{{ item.game.title }}">
                                {% else %}
                                    <div class="bg-secondary d-flex align-items-center justify-content-center rounded" style="height: 80px;">
                                        <i class="bi bi-controller text-white"></i>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-4">
                                <h5 class="mb-1">{{ item.game.title }}</h5>
                                <small class="text-muted">{{ item.game.platform }}</small>
                            </div>
                            <div class="col-md-2">
                                <form method="post" action="{{ path('app_cart_update', {'id': item.id}) }}">
                                    <div class="input-group input-group-sm">
                                        <input type="number" name="quantity" class="form-control" value="{{ item.quantity }}" min="1" max="10">
                                        <button type="submit" class="btn btn-outline-secondary">
                                            <i class="bi bi-check"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-2 text-center">
                                <strong class="text-success">{{ item.game.price * item.quantity }} €</strong>
                            </div>
                            <div class="col-md-2 text-end">
                                <form method="post" action="{{ path('app_cart_remove', {'id': item.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Retirer cet article ?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Récapitulatif</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total :</span>
                        <strong>{{ total }} €</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison :</span>
                        <strong class="text-success">Gratuite</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total :</strong>
                        <strong class="fs-4 text-success">{{ total }} €</strong>
                    </div>
                    <a href="{{ path('app_order_checkout') }}" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-credit-card"></i> Passer commande
                    </a>
                    <a href="{{ path('app_shop') }}" class="btn btn-outline-primary w-100">
                        <i class="bi bi-arrow-left"></i> Continuer mes achats
                    </a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check display-4 text-success"></i>
                    <p class="mb-0 mt-2"><small>Paiement 100% sécurisé</small></p>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}